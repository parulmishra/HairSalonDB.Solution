@{
 Layout = "_Layout";
}
<div class= "row">
  <div class="col-md-6">
   <div class="well">
	<h2>Meet Our Clients</h2>
     @if(@Model.Count == 0)
     {
      <h3>There are currently no clients!</h3>
     }
     else
     {
     <ul>
      @foreach(var client in @Model)
      {
       <li><a href="/clients/@client.GetId()">@client.GetName()</a></li>
      }
     </ul>
	 }
   </div>
  </div>

  <div class="col-md-6">
   <button class="btn btn-default"><a href="/clients/delete">Delete All Clients</a></button>
   <button class="btn btn-default"><a href="/clients/add">Add Client</a></button>
   <button class="btn btn-default"><a href="/">Home</a></button>
  </div>
</div>  
