@{
  Layout = "_Layout";
}
<div class="row">
 <div class="col-md-6">
  <div class="well">
   <h2>Meet Our Stylists</h2>
	 @if(@Model.Count == 0)
	 {
	  <h3>There are currently no stylists!</h3>
     }
     else
     {
      <ul>
      @foreach(var stylist in @Model)
      {
       <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
      }
      </ul>
     }
	</div>
   </div>	

<div class="col-md-6">
<button class="btn btn-default"><a href="/stylists/delete">Delete All Stylists</a></button>
<button class="btn btn-default"><a href="/stylists/add">Add Stylist</a></button>
<button class="btn btn-default"><a href="/">Home</a></button>
</div>
</div>