@{
  Layout = "_Layout";
}
<h2>Add a Client for </h2>
<form action="/stylists/@Model.GetId()/clients/@Model.GetId()" method="post">
  <div class="form-group">
    <label for="client-name">ENTER CLIENT'S NAME</label>
    <input name="client-name" type="text" id="client-name">
  </div>

  <div class="form-group">
    <label for="client-email">ENTER CLIENT'S EMAIL</label>
    <input name="client-email" type="text" id="client-email">
  </div>

  <div class="form-group">
    <label for="client-phone">ENTER CLIENT'S PHONE NUMBER</label>
    <input name="client-phone" type="text" id="client-phone">
  </div>
	
  <button class="btn btn-default" type="submit">Add Restaurant</button>
</form>
<button class="btn btn-default"><a href="/">Home</a></button>
